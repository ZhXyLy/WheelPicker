<resources>

    <style name="WP.dialogWindowAnimBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/wp_translate_enter</item>
        <item name="android:windowExitAnimation">@anim/wp_translate_outer</item>
    </style>

    <style name="WP.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:backgroundDimEnabled">true</item><!--是否可以设置模糊度-->
        <item name="android:backgroundDimAmount">0.3</item><!--模糊度默认就是0.6-->
        <!--代码设置或者这里一样-->
        <!--<item name="android:windowAnimationStyle">@style/dialogWindowAnimBottom</item>-->
    </style>

</resources>
