<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="新版结果："
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lasted_result"
            android:layout_width="match_parent"
            tools:text="Java"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="列表选择结果："
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_list_result"
            android:layout_width="match_parent"
            tools:text="Java"
            android:layout_marginStart="8dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <com.jx.wheelpicker.widget.lasted.AreaPicker
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/btn_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="旧版区域选择Dialog" />

    <Button
        android:id="@+id/btn_lasted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新版区域选择Dialog" />

    <Button
        android:id="@+id/btn_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表区域选择Dialog" />

    <com.jx.wheelpicker.widget.list.ListAreaPicker
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>